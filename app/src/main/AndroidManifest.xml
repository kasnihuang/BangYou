<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bangyou.android">

    <uses-permission android:name="android.permission.CALL_PHONE" />
    <application android:name= "com.bangyou.android.application.BangyouApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activity.OrderHandleActivity"/>
        <activity android:name=".activity.OrderDetailActivity" android:theme="@android:style/Theme.Holo.Light.NoActionBar"/>
    </application>

</manifest>