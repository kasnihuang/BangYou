<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/dimen_60">

    <LinearLayout
        android:id="@+id/layout_operation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_alignParentRight="true"
        >

        <ImageButton
            android:id="@+id/btn_call"
            android:layout_width="@dimen/dimen_50"
            android:layout_height="@dimen/dimen_50"
            android:layout_marginLeft="@dimen/dimen_5"
            android:layout_marginRight="@dimen/dimen_10"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_15"
            android:src="@drawable/launch_bar_btn_message_normal"
            android:background="@drawable/btn_green_bg"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/layout_pending_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <Button
                android:id="@+id/btn_accept"
                android:layout_width="@dimen/dimen_50"
                android:layout_height="@dimen/dimen_50"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_centerVertical="true"
                android:text="@string/order_accept"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_15"
                android:background="@drawable/btn_green_bg"/>
            <Button
                android:id="@+id/btn_refuse"
                android:layout_width="@dimen/dimen_50"
                android:layout_height="@dimen/dimen_50"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_marginRight="@dimen/dimen_10"
                android:layout_centerVertical="true"
                android:text="@string/order_refuse"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_15"
                android:background="@drawable/btn_green_bg"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_order_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_5"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/layout_operation"
        android:lines="1"
        android:ellipsize="end"
        android:textSize="@dimen/font_18"/>

</RelativeLayout>
