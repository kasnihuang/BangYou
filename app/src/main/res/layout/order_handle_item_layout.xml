<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/dimen_60">

    <LinearLayout
        android:id="@+id/layout_operation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="visible"
        >

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_1"
        android:src="@drawable/icon_message" />


        <LinearLayout
            android:id="@+id/layout_pending_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_order_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_5"
                android:layout_centerVertical="true"
                android:lines="1"
                android:text="订单标题...."
                android:ellipsize="end"
                android:textSize="@dimen/font_18"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_timer_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:src="@drawable/icon_time" />

                <TextView
                    android:id="@+id/tv_order_timer_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_centerVertical="true"
                    android:lines="1"
                    android:text="订单标题...."
                    android:ellipsize="end"
                    android:textSize="@dimen/font_18"/>
                <TextView
                    android:id="@+id/tv_order_timer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_centerVertical="true"
                    android:lines="1"
                    android:text="订单标题...."
                    android:ellipsize="end"
                    android:textSize="@dimen/font_18"/>
                </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/dimen_20"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/iv_order_addr_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:src="@drawable/icon_addr" />

                <TextView
                    android:id="@+id/tv_order_addr_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_centerVertical="true"
                    android:lines="1"
                    android:text="订单标题...."
                    android:ellipsize="end"
                    android:textSize="@dimen/font_18"/>
                <TextView
                    android:id="@+id/tv_order_addr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_5"
                    android:layout_centerVertical="true"
                    android:lines="1"
                    android:text="订单标题...."
                    android:ellipsize="end"
                    android:textSize="@dimen/font_18"/>
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_order_linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_5"
        android:layout_marginLeft="@dimen/dimen_5"
        android:layout_centerVertical="true"
        android:layout_alignBottom="@+id/layout_operation"
        android:lines="1"
        android:ellipsize="end"
        android:background="@color/palette_gray_2"/>


    <TextView
        android:id="@+id/tv_order_contacter_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_5"
        android:layout_centerVertical="true"
        android:layout_alignTop="@+id/tv_order_linear"
        android:lines="1"
        android:ellipsize="end"
        android:text="未上门安装"
        android:textSize="@dimen/font_18"/>


</RelativeLayout>
